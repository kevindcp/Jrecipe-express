generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

model User {
    id                      Int       @id @default(autoincrement())
    email                   String    @unique
    name                    String
    role                    String    @default("USER")
    passwordHash            String
    recoverPasswordToken    String?
    passwordTokenExpiration DateTime?
    recipes                 Recipe[]
}

model Recipe {
    id          Int      @id @default(autoincrement())
    title       String
    ingredients String
    steps       String
    author      User     @relation(fields: [authorId], references: [id])
    authorId    Int
    category    Category @relation(fields: [categoryId], references: [id])
    categoryId  Int
}

model Category {
    id      Int      @id @default(autoincrement())
    name    String
    recipes Recipe[]
}
