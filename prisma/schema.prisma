generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

model User {
    id            Int     @id @default(autoincrement())
    email         String  @unique
    name          String
    passwordHash  String
    isValidated   Boolean
    passwordToken String
    recipes       Recipe?
}

model Recipe {
    id          Int    @id @default(autoincrement())
    title       String
    ingredients String
    steps       String
    author      User   @relation(fields: [authorId], references: [id])
    authorId    Int    @unique
}
