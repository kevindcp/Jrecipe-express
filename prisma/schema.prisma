generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

model User {
    id                      Int       @id @default(autoincrement())
    email                   String    @unique
    name                    String
    role                    String    @default("USER")
    passwordHash            String
    recoverPasswordToken    String?
    passwordTokenExpiration DateTime?
    recipes                 Recipe[]
}

model Recipe {
    id          Int    @default(autoincrement())
    title       String
    ingredients String
    steps       String
    author      User   @relation(fields: [authorId], references: [id])
    authorId    Int    @unique

    @@id([id, authorId])
}
